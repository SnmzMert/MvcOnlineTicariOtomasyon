@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Current>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Cariler</h3>

        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                

                
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0" style="height: 300px;">
        <table class="table table-head-fixed text-nowrap">
            <thead>
                <tr>

                    <th>#</th>
                    <th>Cari Adı</th>
                    <th>Açıklam</th>
                    <th>Durum</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Bakiye</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var x in Model)
                {

                    <tr>
                        <td>@x.CurrentId</td>
                        <td>@x.CurrentName</td>
                        <td>@x.Description</td>
                        @{var status = "";
                            var badgeClass = "";

                            if (x.IsActive == true)
                            {
                                status = "Aktif";
                                badgeClass = "bg-success";
                            }
                            else
                            {
                                status = "Pasif";
                                badgeClass = "bg-danger";
                            }
                        }

                    <td><span style="width:50px; height:20px;" class="badge @badgeClass">@status</span></td>
                        <td>@x.Mail</td>
                        <td>@x.Phone</td>
                        <td>@x.CurrentAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>