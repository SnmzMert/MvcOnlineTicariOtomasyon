@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Billing>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Faturalar</h3>
<br />
<table id="tbl1" class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Seri No</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Vergi Dairesi</th>
            <th>Oluşturma Saati</th>
            
            <th>Detaylar  </th>
        </tr>
    </thead>

    @{
        int count = 1;
    }
    @foreach (var x in Model)
    {
        <tr>
            
            <td>@count</td>
            <td>@x.SerialNumber</td> 
            <td>@x.Description</td>
            <td>@x.Date.ToString("dd.MMM.yyyy")</td>
            <td>@x.TaxOffice</td>
            <td>@x.Time</td>        
            <td><a class="btn btn-outline-dark" href="~/Billig/BillingDetail/@x.Id">Detaylar</a></td>
        </tr>
        count++;
    }
</table>
<a class="btn btn-outline-warning" href="~/Billig/GetBilling">Yeni Fatura Ekle</a>

